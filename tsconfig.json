{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "lib/*.ts"
  ]
}